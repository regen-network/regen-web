{
  "name": "regen-web",
  "private": true,
  "description": "Regen Website",
  "homepage": "https://github.com/regen-network/regen-web",
  "bugs": {
    "url": "https://github.com/regen-network/regen-web/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/regen-network/regen-web"
  },
  "workspaces": {
    "packages": [
      "web-marketplace",
      "web-components",
      "web-storybook",
      "web-auth",
      "web-www"
    ]
  },
  "scripts": {
    "build": "yarn build-components && yarn workspace web-marketplace build",
    "build-www": "yarn build-components && yarn workspace web-www build",
    "build-components": "yarn workspace web-components build",
    "build-storybook": "yarn build-components && yarn workspace web-storybook build-storybook",
    "build-auth": "yarn build-components && yarn workspace web-auth build",
    "clean": "find . -iname 'node_modules' -maxdepth 2 | xargs rm -rf",
    "format": "yarn workspaces foreach run format",
    "lint": "yarn workspaces foreach run lint",
    "format-and-fix": "yarn workspaces foreach run format-and-fix",
    "storybook": "yarn workspace web-storybook storybook",
    "test": "yarn workspace web-marketplace test-no-watch",
    "test-components": "yarn workspace web-components test",
    "start": "yarn workspace web-marketplace start",
    "start-auth": "yarn workspace web-auth start",
    "watch": "yarn workspace web-components watch",
    "test-update-snapshot": "yarn workspace web-marketplace test-update-snapshot",
    "bump": "lerna version --conventional-commits"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.4",
    "@graphql-codegen/introspection": "1.18.2",
    "@graphql-codegen/typescript": "1.22.0",
    "@graphql-codegen/typescript-graphql-files-modules": "1.18.1",
    "@graphql-codegen/typescript-operations": "^1.18.0",
    "@graphql-codegen/typescript-react-apollo": "2.2.4",
    "@storybook/addon-actions": "^7.3.2",
    "@storybook/addon-essentials": "^7.3.2",
    "@storybook/addon-interactions": "^7.3.2",
    "@storybook/addon-links": "^7.3.2",
    "@storybook/react": "^7.3.2",
    "@storybook/react-vite": "^7.3.2",
    "@types/css-mediaquery": "^0.1.1",
    "@types/jest": "27.0.3",
    "@types/node": "13.1.1",
    "babel-loader": "8.1.0",
    "css-mediaquery": "0.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^3.1.0",
    "lerna": "^6.4.1",
    "prettier": "2.4.1",
    "shx": "^0.3.2",
    "storybook": "^7.3.2",
    "typescript": "^4.4.4"
  },
  "resolutions": {
    "babel-eslint": "^10.1.0",
    "webpack": "4.44.2",
    "react-error-overlay": "6.0.9",
    "@emotion/react": "11.10.6"
  },
  "husky": {
    "hooks": {}
  },
  "version": "1.1.0"
}
