{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "jsx": "react-jsx",
    "noEmitOnError": true,
    "outDir": "lib",
    "paths": {
      "~/*": ["src/*"]
    },
    "rootDir": "src",
    "module": "esnext"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*stories.tsx"]
}
